<h2 class="text-center text-lg mb-4">🍪 Mes recettes publiées !</h2>

  <% @myrecipes.each do |recipe| %>
    <%= link_to recipe do %>
    <div class="bg-creme px-2 py-2 rounded-md shadow-lila-deep h-28 mb-4">

      <div class="flex">
        <div class="mr-4">
          <%= image_tag "palmiers.jpg", class:"h-24 w-28 rounded-md" %>
        </div>

        <div>
          <h3 class="text-base"><%= recipe.title %></h3>
          <p class="text-sm text-lila-deep"><%= recipe.category %></p>

          <div class="flex items-center">
            <p class="mr-4 text-xs">👩‍🍳 <%= recipe.prep_time %> min</p>
            <p class="text-xs">⏲ <%= recipe.cooking_time %> min</p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>

<h2 class="text-center text-lg mb-4">📚 Trouvez la recette parfaite !</h2>

<!-- Cards recipies -->
<% @recipies.each do |recipe| %>
  <%= link_to recipy_path(recipe) do %>
  <div class="bg-creme px-2 py-2 rounded-md shadow-lila-deep h-28">

    <div class="flex">
      <div class="mr-4">
        <%= image_tag "palmiers.jpg", class:"h-24 w-28 rounded-md" %>
      </div>

      <div>
        <h3 class="text-base"><%= recipe.title %></h3>
        <p class="text-sm text-lila-deep"><%= recipe.category %></p>

        <div class="flex items-center">
          <p class="mr-4 text-xs">👩‍🍳 <%= recipe.prep_time %> min</p>
          <p class="text-xs">⏲ <%= recipe.cooking_time %> min</p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
<!-- Fin cards -->


<!-- MENU BAR -->
<div class="bg-creme rounded-full h-16 mt-10 flex items-center justify-center">
  <%= image_tag "search.png", class:"h-8 pr-6" %>
  <%= image_tag "books.png", class:"h-8 pr-6" %>

  <div class="bg-creme rounded-full h-20 w-20 -mt-4 flex items-center justify-center">
    <%= link_to new_recipy_path do %>
      <%= image_tag "plus.png", class:"h-14" %>
    <% end %>
  </div>

  <%= image_tag "cookie.png", class:"h-8 pl-6 pr-6" %>
  <%= image_tag "heart.png", class:"h-8" %>
</div>
